<%- include ('header.ejs') %>

    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Redimir Promo !!!</span>
                    <p><strong>Token:</strong>
                        <%= userId._id %>
                    </p>
                    <p><strong>Fecha de compra:</strong>
                        <%= userId.createdAt %>
                    </p>
                    <p><strong>Correo:</strong>
                        <%= userId.correo %>
                    </p>
                    <p><strong>Telefono:</strong>
                        <%= userId.telefono %>
                    </p>
                </div>
                <div class="card-action">
                    <a class="waves-effect waves-light btn modal-trigger" href="#modal"><i
                            class="material-icons left">touch_app</i>Redimir</a>
                    <a class="waves-effect waves-light btn modal-trigger" href="http://app.remicos.com.co:84"><i
                            class="material-icons left">cancel</i>cancelar</a>
                </div>
            </div>
        </div>
    </div>



    <!-- Modal Structure -->
    <div id="modal" class="modal bottom-sheet">
        <div class="modal-content">
            <h4>Aprobación</h4>
            <p>Por favor ingrese el código de aprobación para redimir la Promo</p>
        </div>
        <form action="/api/redime" method="POST" id="contact-form">
            <div class="row">
                <div class="col s12">
                    <div class="row">
                        <div class="input-field col s12">
                            <i class="material-icons prefix">fingerprint</i>
                            <input type="text" id="autocomplete-input" class="autocomplete" name="codAprob" onkeyup="s()">
                            <label for="autocomplete-input">Código de Aprobación</label>
                        </div>
                    </div>
                </div>
            </div>
            <input type="text" id="autocomplete-input" class="hide autocomplete" value="<%= userId._id %>" name="id">



            <div class="modal-footer">
                <button class="modal-close waves-effect waves-green btn-flat" type="Submit" id="aprobe_button" disabled><i
                        class="material-icons left">task_alt</i>Aprobar</button>
            </div>
        </form>
    </div>


    <script>
        $(document).ready(function () {
            $('.modal').modal();
            $('input.autocomplete').autocomplete({
                data: {
                    "Apple": null,
                    "Microsoft": null,
                    "Google": 'https://placehold.it/250x250'
                },
            });
        })
    </script>


    <script type="text/javascript">
        function s() {
            var i = document.getElementById("autocomplete-input");
            if (i.value == "") {
                document.getElementById("aprobe_button").disabled = true;
            }
            else
                document.getElementById("aprobe_button").disabled = false;
        }
    </script>






    <%- include ('footer.ejs') %>